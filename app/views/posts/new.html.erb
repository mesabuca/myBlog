<h1 align="center">New Post</h1>
<%= form_for :post, url: posts_path do |f| %>
  <% if @post.errors.any? %>
    <div id="errors">
      <h2><%= pluralize(@post.errors.count, "error") %></h2>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </div>
  <% end %>
  <%= f.label :title %><br>
  <%= f.text_field :title, class:"form-group-lg" %><br>
  <%= f.label :body %><br>
  <%= f.text_area :body %><br>
  <%= f.submit class:"btn btn-lg btn-primary m-progress" %>

<% end %>
