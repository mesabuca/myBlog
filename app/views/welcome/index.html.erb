
<div class="parallax" >
  <div class="parallaxMessage">
    <h2>
      <%= markdown(@wMessage.mainTitle) %>
    </h2>
  </div>
  <div class="continue">
    <%= link_to root_path(anchor:"welcomeText"), class:"btn btn-default btn-block btn-lg btn-grey" do %>
      <span class="fa fa-angle-double-down"></span>
    <% end %>
  </div>
</div>

<div class="welcome">
  <div id="welcomeText"></div>
  <h2><%= @wMessage.title %></h2><br>
  <h3><%= @wMessage.body %></h3>
</div>
