<div class="form-group">
  <%= form_for @category do |f| %>
  	<% if @category.errors.any? %>
  		<div id="errors">
  			<h2><%= pluralize(@category.errors.count, "error") %> prevented this category from saving:</h2>
  			<ul>
  				<% @category.errors.full_messages.each do |msg| %>
  					<li><%= msg %></li>
  				<% end %>
  			</ul>
  		</div>
  	<% end %>
  	<%= f.label :name %><br>
  	<%= f.text_field :name, class:"form-control input-lg", autocomplete:'off' %>
    <br>
  	<%= f.submit class:"btn btn-default btn-block btn-lg btn-grey" %>
  <% end %>

</div>
